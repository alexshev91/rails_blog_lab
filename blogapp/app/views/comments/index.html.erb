<div>
        <h2><%= @post.title %></h2>
        <p>
          <%= @post.description %>
        </p>
    </div>

    <div>
      <h2> Comments: </h2>
      <% @comments.each do |comment| %>
        <div>
          <h3><%= comment.guest_name %></h3>
          <p><h3><%= comment.content %></h3></p>
        </div>
      <% end %>
    </div>