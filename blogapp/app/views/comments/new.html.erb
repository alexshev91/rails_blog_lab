<div class="container">
  <div class="row">
    <div class="col-xs-offset-4 col-xs-4">
      <h2><%= @post.title %></h2>
      <p>
        <%= @post.description %>
        <%= @post.author %>
      </p>
    </div>
  </div>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.text_field :guest_name, class: "form-control" %><br>
    <%= f.text_area :content, class: "form-control" %> <br>
    <%= f.submit "Save Content", class: "btn btn-primary"%>
  <% end %>
</div>